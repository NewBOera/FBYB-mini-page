  </head>
  <body class="overflow flex flex-col items-center Satoshi-regular" transition:animate={fade({ duration: '0.5s' })}>
    <Toaster position="top-right" client:only="react" />
    <slot />
    <!-- ! Footer -->
    <Footer />
  </body>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // @ts-expect-error
      ScrollReveal().reveal('.animate-section', {
        duration: 800,
        origin: 'bottom',
        distance: '50px',
        easing: 'ease-in-out',
        reset: false,
      });

      // @ts-expect-error
      ScrollReveal().reveal('.animate-hero', {
        duration: 600,
        origin: 'left',
        distance: '30px',
        easing: 'ease-in-out',
        reset: false,
      });
    });
  </script>
</html>

<style is:global>
  section {
    scroll-margin-top: 100px;
  }
</style>
