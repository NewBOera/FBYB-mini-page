---
interface Props {
  isLanding: boolean;
}

const { isLanding } = Astro.props;
---

<header class="hidden text-black justify-center items-center lg:flex fixed max-w-full z-50 bg-[#FFFFFF] w-full shadow-[0px_10px_50px_-30px_#00000024]">
  <nav class="flex w-full justify-between items-center rounded-xl mx-6 md:px-8 lg:px-0 lg:mx-3 h-[80px] lg:w-[1200px] xl:w-[1300px] bg-[#FFFFFF]">
    <a href={isLanding ? '#home-section' : 'index.html'}><img class="object-contain w-28 h-28 shrink-0" src="/public/assets/navbar/logo.png" alt="Logo" title="Fly Before You Buy" /></a>
  </nav>
</header>
