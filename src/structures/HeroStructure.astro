---
interface Props {
  id: 'home-section' | string;
  wrapperClasses?: string;
  sectionClasses?: string;
}

const { id, wrapperClasses, sectionClasses } = Astro.props;
---

<section id={id} class=`flex justify-center hero-section animate-hero ${sectionClasses}`>
  <div class={`flex flex-col pt-[20px] md:pt-[30px] px-3 sm:px-6 md:px-8 lg:px-0 w-full gap-8 sm:gap-16 md:gap-10 ${wrapperClasses}`}>
    <slot />
  </div>
</section>
