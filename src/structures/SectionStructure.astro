---
interface Props {
  idSection: string;
  wrapperClasses?: string;
  sectionClasses?: string;
}

const { idSection, wrapperClasses, sectionClasses } = Astro.props;
---

<section id={`${idSection}-section`} class=`flex justify-center py-3 md:py-4 lg:py-6 xl:py-8  ${sectionClasses} animate-section`>
  <div class={`w-full flex flex-col px-3 sm:px-6 md:px-8 lg:px-0 gap-8 sm:gap-16 md:gap-10 lg:max-w-[1200px] xl:max-w-[1300px] ${wrapperClasses}`}>
    <slot />
  </div>
</section>
