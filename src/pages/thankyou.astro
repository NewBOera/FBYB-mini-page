  <style>
 
   img.logo {
      position: absolute;
      left: 10px;
      top: 10px;
      width: 175px;
      height: 67px;
      z-index: 12;
    }

  .links-container {
    display: flex;
  }

  .links-container > article {
    margin: 0 9px;
  }

  .right-bg {
    background: url('https://shualim.online/wlp/FBYB/FBYB-mini/public/assets/H-Right.png') no-repeat;
    background-size: cover;
  }


  .hero-content {
    height: 750px;
    width: 1272px;
  }

  .hero-content h1 {
    font-size: 50px;
  }

  .flex-composition {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

   .flex-composition p {
    text-align: center;
    width: 384px;
   }


   .flex-composition p.secondary {
    color: rgba(96, 103, 115, 1);

   }


   @media (max-width: 1500px) {
     img.logo {
      left: 30px;
      top: 10px;
    }

   
   }


   @media (max-width: 1325px) {
    .hero-content {
    height: auto;
    width:  auto;
    padding-top: 5vh;
   flex-direction: column;
  }

  .links-container {
    flex-direction: column;
    gap: 20px;
  }
  .flex-composition  {
    padding-top: 100px;
   }
.flex-composition p {
    text-align: center;
    width: 90%;
   }
  
  
    }

