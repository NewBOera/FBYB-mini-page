<style is:global>
  .list-custom::marker {
    color: #b18e3b; /* Cambia al color deseado */
  }

  .bg-hero {
    background: url('/public/assets/home/mobile.png');
  }

  @media (min-width: 1024px) {
    .bg-hero {
